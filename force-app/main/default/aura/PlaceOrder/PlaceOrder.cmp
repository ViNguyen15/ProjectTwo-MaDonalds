<aura:component controller="ControllerPlaceOrder">

    <lightning:select name="selectProduct" label="Select a Product" required="true">
        <aura:iteration items="{!v.productNames}" var="prodName">
                <option text="{!prodName}"></option>
            </aura:iteration>
    </lightning:select>
    <br/><br/><br/>
    <lightning:input label = "Quantity" type = "Number" value = "1" required="true"/>
    <br/><br/><br/>
    <lightning:button class="slds-var-m-top_small" type="submit" label="Add item to Order" />
</aura:component>